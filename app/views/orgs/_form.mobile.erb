<% if @org.errors.any? %>
    <div class="alert alert-error">  
        <a class="close" data-dismiss="alert" href="#">x</a>
        <h4 class="alert-heading">Error!</h4>
        <p>
            <ul>
            <% @org.errors.each do |attr,msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </p>
    </div>
<% end %>

<h3><%= yield :header %></h3>

<%= form_for(@org) do |f| %>
  <div class="row-fluid">
      <div class="span2">
          <div class="pull-right"><%= f.label :name, "name"%></div>
      </div>
      <div class="span10">
          <%= f.text_field :name, :class=>"full"  %>
      </div>
  </div>
  <div class="row-fluid">
      <div class="span2">&nbsp;</div>
      <div class="span2">
          <%= image_tag current_user.avatar.url(:profile) %>
      </div>
      <div class="span8">
          <%= f.file_field :avatar %>
      </div>
  </div>
  <div class="row-fluid">
      <div class="span2">
          <div class="pull-right"><%= f.label :email, "email"%></div>
      </div>
      <div class="span10">
          <%= f.text_field :email, :class=>"full"  %>
      </div>
  </div>
  <div class="row-fluid">
    <div class="span2">
          <div class="pull-right"><%= f.label :neighborhood, "based in" %></div>
      </div>
      <div class="span10">
          <%= f.collection_select(:neighborhood_id, Neighborhood.all, :id, :name, {:include_blank => "anywhere in king county" },  :class=>"full") %>
      </div>
  </div>
  <div class="row-fluid">
      <div class="span2">
          <div class="pull-right"><%= f.label :mission, "mission"%></div>
      </div>
      <div class="span10">
          <%= f.text_field :mission, :class=>"full" %>
      </div>
  </div>
  <div class="row-fluid">
      <div class="span2">
          <div class="pull-right"><%= f.label :vision, "vision"%></div>
      </div>
      <div class="span10">
          <%= f.text_field :vision, :class=>"full"  %>
      </div>
  </div>
  <div class="row-fluid">
      <div class="span2">
          <div class="pull-right"><%= f.label :description, "description" %></div>
      </div>
      <div class="span10">
          <%= f.text_area :description, :class=>"full" %>
      </div>
  </div>
  <div class="row-fluid">
    <div class="span2">
          <div class="pull-right"><%= f.label :categories, "categories", :for=>"email" %></div>
      </div>
      <div class="span10">
          <%= render(:partial => 'skills/form', :locals => { :entity => "org", :f => f, :skills => @org.skills }) %>
      </div>
  </div>
  <div class="row-fluid">
      <div class = "span2">&nbsp;</div>
      <div class = "span10">
          <button type="submit" href="#" class="btn btn-primary pull-right"><%= yield :button %></button>   
      </div>
  </div>
<% end %>